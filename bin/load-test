#!/usr/bin/env perl
use strict;
use warnings;
use FindBin;
use Benchmark;

my $num_reminders = 1;
my $email = 'lukec@vancal.org';
my $zone = 'vancouver-north-blue';
my $server = 'http://dev.hackspace.ca';
my $tool = "$FindBin::Bin/vantrash-reminder";

my $i = 0;
timethis 1000, sub {
    system("$tool --server '$server' --zone '$zone' --email '$email' --name 'test-$$-$i'");
    $i++;
};

